<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>everything</id>
    <formats>
        <format>tar</format>
    </formats>

    <files>
        <file>
            <source>src/main/resources/ymp-conf.properties</source>
            <outputDirectory>conf</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/webapp/WEB-INF/cfgs/druid.properties</source>
            <outputDirectory>conf/cfgs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/webapp/WEB-INF/cfgs/ehcache.xml</source>
            <outputDirectory>conf/cfgs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/webapp/WEB-INF/cfgs/log4j.xml</source>
            <outputDirectory>conf/cfgs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>package/shell/stop.sh</source>
            <outputDirectory></outputDirectory>
            <fileMode>0744</fileMode>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>ymp-conf.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>package/shell</directory>
            <outputDirectory></outputDirectory>
            <fileMode>0744</fileMode>
            <excludes>
                <exclude>stop.sh</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>${artifact.name}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>${groupId}:${artifactId}</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>